- category_has_many_posts ||= nil
- if category_has_many_posts
  %p= link_to category.name, posts_path(category: category.name)
- else
  %h3= category.name
- from_reply_form ||= nil
- unless from_reply_form
  %p= link_to 'Добавить', new_category_path(category.id)
  %p= link_to 'Редактировать', edit_category_path(category)
  %p= link_to 'Удалить', category_path(category), method: :delete, data: { confirm: "Вы уверены ?" }
