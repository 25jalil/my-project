- @tags = TagsAssociation.select("tag_id")
- @tags_array = []
- @tags.each do |tag|
  - @tags_array << tag.tag_id
- @tags_array.sort_by! {|v| -@tags_array.count(v)}.uniq!
- @tagview = Tag.find(@tags_array)
- @tagview.each_with_index do |value, index|

  - if index == 0
    .css
      = value.name
  - elsif index == 1
    .css1
      = value.name
  - elsif index == 2
    .css2
      = value.name
  - elsif index == 3
    .css3
      = value.name
  - elsif index == 4
    .css4
      = value.name
  - else
    .css5
      = value.name
